<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"         >

    <TextView
        android:id="@+id/txv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect your sensors"
        android:layout_margin="20px"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btn_scan"
        android:text="Start scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txv_title" 
        android:drawableLeft="@drawable/icon_bluetooth_searching"/>

    <Button
        android:id="@+id/btn_arm"
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_below="@id/txv_sensors" />

    <TextView
        android:id="@+id/txv_sensors"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensors found:"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_below="@id/txv_title"
        android:textStyle="bold" />

    <!--Images-->
    <FrameLayout
        android:id="@+id/frame_image"
        android:layout_below="@id/txv_title"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Next"
            android:drawableRight="@drawable/icon_arrow_forward"
            android:id="@+id/btn_next"
            android:layout_gravity="bottom|right" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:padding="30dp"
            android:id="@+id/imageView"
            android:contentDescription="image of person applying sensor to their back"
            android:src="@drawable/apply_sensor"
            android:layout_gravity="top|right"
            android:layout_marginBottom="32.5dp" />
        

    </FrameLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="1. Wipe the area with an alcohol wipe"
        android:background="@drawable/textinputborder"
        android:id="@+id/txv_instruction"
        android:visibility="invisible"
        android:layout_below="@id/frame_image"
            />
    
    <Button
        android:id="@+id/btn_mvc"
        android:text="Start exercising"
        android:drawableRight="@drawable/icon_arrow_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_below="@id/frame_image" />

</RelativeLayout>