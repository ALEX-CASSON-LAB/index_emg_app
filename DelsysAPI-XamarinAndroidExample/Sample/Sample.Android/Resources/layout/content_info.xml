<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"   
    >
<RelativeLayout 
    
    android:paddingTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
        android:background="@drawable/third_background">

    <TextView
        android:id="@+id/txv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect your sensors"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_margin="20px"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" 
     />
    
    <ProgressBar
        android:id="@+id/progBar_search"
        style="@android:style/Widget.Material.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="100"
        android:visibility="gone"
        android:layout_below="@id/txv_title"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"/>

    <TextView
        android:id="@+id/txv_subtitle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lift the sensor from the charging dock
        \nHold it on the charging icon at the front until it flashes orange and blue.\nDo the same with the other sensor. \n\nIf it stops flashing, re-dock and try again."
        android:layout_margin="20px"
        android:layout_centerHorizontal="true"
        
        android:layout_below="@id/txv_title"
     />
    <android.support.v7.widget.CardView
        android:layout_width="240dp"
        android:layout_height="400dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/txv_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_margin="20px"
        android:id="@+id/view_sensor">

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:contentDescription="Image showing how to connect the sensors. Lift the sensor from the charger and hold it to the connect icon on the charger"
        android:src="@drawable/info_sensor"
        android:id="@+id/rounded_user_image"/>

    </android.support.v7.widget.CardView>

    <CheckBox
        android:text="See your results in real-time?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkb_realtime" 
        android:layout_centerHorizontal="true"
        android:layout_below="@id/view_sensor" />

    <Button
        android:id="@+id/btn_scan"
        android:text="Search for sensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/chkb_realtime" 
        android:layout_gravity="bottom"
        android:drawableLeft="@drawable/icon_bluetooth_searching"/>
    <Button
        android:id="@+id/btn_rescan"
        android:text="Search again for sensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/chkb_realtime" 
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:drawableLeft="@drawable/icon_bluetooth_searching"/>

    <Button
        android:id="@+id/btn_arm"
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px" 
        android:padding="10dp"
        android:background="@color/colorButton"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_below="@id/txv_sensors" />

    <TextView
        android:id="@+id/txv_sensors"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_below="@id/progBar_search"
        android:textStyle="bold" />

    <!--Images-->
    <FrameLayout
        android:id="@+id/frame_image"
        android:layout_below="@id/txv_title"
        android:layout_width="360dp"
        android:layout_height="600dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:visibility="gone">
        

        <android.support.v7.widget.CardView
            android:layout_width="360dp"
            android:layout_height="600dp"
            app:cardCornerRadius="10dp"
            android:layout_below="@id/txv_title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:id="@+id/imageView"
            android:contentDescription="image of person applying sensor to their back"
            android:src="@drawable/info_stick"
            android:layout_gravity="top|right"/>
            <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Next"
            android:padding="10dp"
            android:background="@color/colorButton"
            android:drawableRight="@drawable/icon_arrow_forward"
            android:id="@+id/btn_next"
            android:layout_gravity="bottom|right" />
        </android.support.v7.widget.CardView>

    </FrameLayout>
    
    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"        
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1. Wipe the area with an alcohol wipe"
        android:id="@+id/txv_instruction"
        android:visibility="gone"
        android:layout_below="@id/frame_image"
            />

    <Button
        android:id="@+id/btn_exercise"
        android:text="Start your exercise session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:padding="10dp"
        android:layout_gravity="center"
        android:background="@color/colorButton"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:drawableRight="@drawable/icon_arrow_forward"
        android:layout_below="@id/txv_instruction" />
    <Button
        android:id="@+id/btn_mvc"
        android:text="FOR PHYSIOTHERAPIST USE \n\n MVC Recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:padding="10dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:background="@color/colorButtonPhysio"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/icon_arrow_forward"
        android:layout_below="@id/btn_exercise" />

</RelativeLayout>
</ScrollView>