<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:paddingTop="?attr/actionBarSize"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/txv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session stats"
        android:layout_margin="20px"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20px" />



    <!--<ImageView
        android:id="@+id/im_exercise"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txv_title"
        android:contentDescription="description" />/>-->

    
    <TextView
        android:id="@+id/txv_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_margin="20px"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20px"
        android:layout_below="@+id/txv_title"/>

    <TextView
        android:id="@+id/txv_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_margin="20px"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20px" 
        android:layout_below="@+id/txv_names"/>
  

    <Button
        android:id="@+id/btn_notes"
        android:text="Add notes"
        android:layout_width="200dp"
         android:padding="10dp"
        android:background="@color/colorButton"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/icon_add"
        android:layout_below="@+id/txv_stats" />

    <Button
        android:id="@+id/btn_home"
        android:text="Home"        
        android:drawableLeft="@drawable/icon_home"
        android:layout_width="200dp"
         android:padding="10dp"
        android:background="@color/colorButton"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_notes" />
    
</RelativeLayout>
